<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/day_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quarta"
                    android:textSize="@dimen/ride_day_text_size"/>

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="16:00"
                    android:textSize="@dimen/ride_time_text_size"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/leaving_address"
                android:text="Av Pe Antonio Jose dos Santos, 1666"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/arriving_address"
                android:text="Unilever Sao Paulo"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/names_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <ImageView
                android:id="@+id/picture2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <ImageView
                android:id="@+id/picture3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <TextView
                android:id="@+id/names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Vinicius, Leandro"/>

        </LinearLayout>

        <TextView
            android:id="@+id/bottom_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 carona combinada"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:id="@+id/bottom_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 pedidos de carona em aberto"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</LinearLayout>