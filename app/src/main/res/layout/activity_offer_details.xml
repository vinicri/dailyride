<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_actionbar" />

    <TextView
        android:id="@+id/ride_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quarta, saindo às 8:30"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="@dimen/padding"
        android:textSize="18sp"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_below="@id/toolbar_actionbar"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:background="@color/beige">

        <LinearLayout
            android:layout_marginLeft="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/rider1_picture"
                android:background="@drawable/shape_user_photo_border_oval"
                android:padding="@dimen/user_photo_oval_padding"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <TextView
                android:id="@+id/rider_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/half_padding"
                android:textSize="16sp"
                android:text="Sharapova, \nvai com você"/>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_height="100dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_marginLeft="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/match1_picture"
                android:background="@drawable/shape_user_photo_border_oval"
                android:padding="@dimen/user_photo_oval_padding"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <ImageView
                android:id="@+id/match2_picture"
                android:layout_marginLeft="@dimen/half_padding"
                android:background="@drawable/shape_user_photo_border_oval"
                android:padding="@dimen/user_photo_oval_padding"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

            <TextView
                android:id="@+id/match_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/half_padding"
                android:textSize="16sp"
                android:text="Pedro e Sandra, \ntambém querem carona"/>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go_to_detail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" />



    </RelativeLayout>

</LinearLayout>